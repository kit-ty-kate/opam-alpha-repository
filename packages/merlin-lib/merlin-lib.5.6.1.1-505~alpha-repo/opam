  "ocaml" {>= "5.5" & < "5.6"}
  "dune" {>= "3.0.0"}
  "csexp" {>= "1.5.1"}
  "alcotest" {with-test & >= "1.3.0"}
  "menhir" {dev & >= "20201216"}
  "menhirLib" {dev & >= "20201216"}
  "menhirSdk" {dev & >= "20201216"}
]
build: [
  ["dune" "subst"] {dev}
  ["dune" "build" "-p" name "-j" jobs]
]
